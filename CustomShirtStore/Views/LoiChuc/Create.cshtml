@model CustomShirtStore.Models.BirthdayCard

@{
    ViewData["Title"] = "Tạo Thiệp Sinh Nhật";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Recipient" class="control-label">Gửi tới (tối đa 30 ký tự)</label>
        <input asp-for="Recipient" class="form-control" maxlength="30" />
        <span asp-validation-for="Recipient" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sender" class="control-label">Người gửi (tối đa 25 ký tự)</label>
        <input asp-for="Sender" class="form-control" maxlength="25" />
        <span asp-validation-for="Sender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message1" class="control-label">Lời chúc dòng 1 (tối đa 35 ký tự)</label>
        <textarea asp-for="Message1" class="form-control" maxlength="35" rows="2"></textarea>
        <span asp-validation-for="Message1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message2" class="control-label">Lời chúc dòng 2 (tối đa 30 ký tự)</label>
        <textarea asp-for="Message2" class="form-control" maxlength="30" rows="2"></textarea>
        <span asp-validation-for="Message2" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Message3" class="control-label">Lời chúc dòng 3 (tối đa 35 ký tự)</label>
        <textarea asp-for="Message3" class="form-control" maxlength="35" rows="2"></textarea>
        <span asp-validation-for="Message3" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CenterMessage" class="control-label">Dòng cuối (tối đa 40 ký tự)</label>
        <textarea asp-for="CenterMessage" class="form-control" maxlength="40" rows="2"></textarea>
        <span asp-validation-for="CenterMessage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUpload" class="control-label">Ảnh chính</label>
        <input asp-for="ImageUpload" type="file" class="form-control" />
        <span asp-validation-for="ImageUpload" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BackgroundImageUpload" class="control-label">Ảnh nền</label>
        <input asp-for="BackgroundImageUpload" type="file" class="form-control" />
        <span asp-validation-for="BackgroundImageUpload" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NoteImageUpload" class="control-label">Ảnh ghi chú</label>
        <input asp-for="NoteImageUpload" type="file" class="form-control" />
        <span asp-validation-for="NoteImageUpload" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AudioUpload" class="control-label">Âm thanh</label>
        <input asp-for="AudioUpload" type="file" class="form-control" />
        <span asp-validation-for="AudioUpload" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thiệp</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
