@model CustomShirtStore.Models.BirthdayCard

@{
    ViewData["Title"] = "Chỉnh sửa thiệp chúc mừng";
}

<h2>Chỉnh sửa thiệp</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div>
        <label>Người nhận</label>
        <input asp-for="Recipient" class="form-control" />
    </div>
    <div>
        <label>Lời chúc 1</label>
        <input asp-for="Message1" class="form-control" />
    </div>
    <div>
        <label>Lời chúc 2</label>
        <input asp-for="Message2" class="form-control" />
    </div>
    <div>
        <label>Lời chúc 3</label>
        <input asp-for="Message3" class="form-control" />
    </div>
    <div>
        <label>Lời chúc ở giữa</label>
        <input asp-for="CenterMessage" class="form-control" />
    </div>
    <div>
        <label>Người gửi</label>
        <input asp-for="Sender" class="form-control" />
    </div>

    <div>
        <label>Hình ảnh chính</label>
        <input asp-for="ImageUpload" type="file" class="form-control" />
        <img src="@Model.ImagePath" style="height:100px;" />
    </div>
    <div>
        <label>Ảnh nền</label>
        <input asp-for="BackgroundImageUpload" type="file" class="form-control" />
        <img src="@Model.BackgroundImagePath" style="height:100px;" />
    </div>
    <div>
        <label>Ảnh ghi chú</label>
        <input asp-for="NoteImageUpload" type="file" class="form-control" />
        <img src="@Model.NoteImagePath" style="height:100px;" />
    </div>
    <div>
        <label>Nhạc</label>
        <input asp-for="AudioUpload" type="file" class="form-control" />
        <audio controls src="@Model.AudioPath"></audio>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
</form>
